# Environment
NODE_ENV=production
PORT=3002

# Database
MONGODB_URL=mongodb://mongodb:27017/krishi-mantra-main
MONGODB_USER=${MONGO_INITDB_ROOT_USERNAME}
MONGODB_PASSWORD=${MONGO_INITDB_ROOT_PASSWORD}

# Authentication
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=30d

# CORS
CORS_ORIGIN=${FRONTEND_URL},${API_GATEWAY_URL}

# Redis (for caching and session management)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_SSL=true

# Clustering (enabled in production)
ENABLE_CLUSTERING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Email Service
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
EMAIL_FROM=${EMAIL_FROM}

# File Storage
CLOUDINARY_CLOUD_NAME=${CLOUDINARY_CLOUD_NAME}
CLOUDINARY_API_KEY=${CLOUDINARY_API_KEY}
CLOUDINARY_API_SECRET=${CLOUDINARY_API_SECRET}

# External Services
GEOPLUGIN_API_URL=http://www.geoplugin.net/json.gp

# Other Services URLs
API_GATEWAY_URL=http://api-gateway:3001
MESSAGE_SERVICE_URL=http://message-service:3004
FEED_SERVICE_URL=http://feed-service:3003
NOTIFICATION_SERVICE_URL=http://notification-service:3006 