# Production Environment
NODE_ENV=production
PORT=3002

# Database Configuration
MONGODB_URL=mongodb://production-mongodb-host:27017/krishi-prod
MONGODB_USER=your-production-mongodb-user
MONGODB_PASSWORD=your-production-mongodb-password

# JWT Configuration
JWT_SECRET=your-secure-production-jwt-secret
JWT_EXPIRY=1d

# CORS Configuration
CORS_ORIGIN=https://your-production-domain.com

# Redis Configuration
REDIS_HOST=production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-production-redis-password

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_USER=your-production-email@gmail.com
MAIL_PASS=your-production-password

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-production-cloud-name
CLOUDINARY_API_KEY=your-production-api-key
CLOUDINARY_API_SECRET=your-production-api-secret

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100 