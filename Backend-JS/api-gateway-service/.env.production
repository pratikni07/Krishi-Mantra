# Production Environment
NODE_ENV=production
PORT=3001
# Service URLs (production)
MAIN_SERVICE_URL=https://api.main.yourdomain.com
MESSAGE_SERVICE_URL=https://api.message.yourdomain.com
FEED_SERVICE_URL=https://api.feed.yourdomain.com
