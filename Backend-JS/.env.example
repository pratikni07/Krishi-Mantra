# Krishi Mantra Backend Environment Configuration
# Copy this file to .env and fill in your specific values

# ==== Basic Configuration ====
NODE_ENV=development      # development, production, or test
PORT=3001                 # Port for API Gateway

# ==== Database Configuration ====
# MongoDB
MONGO_USERNAME=admin
MONGO_PASSWORD=secure-password
MONGO_PORT=27017
MONGODB_URL=mongodb://localhost:27017/krishi-mantra

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis-password
REDIS_SSL=false

# ==== Authentication ====
JWT_SECRET=your-super-secure-jwt-secret-key
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=30d

# ==== Service URLs ====
API_GATEWAY_PORT=3001
FRONTEND_URL=http://localhost:3000
MAIN_SERVICE_URL=http://localhost:3002
FEED_SERVICE_URL=http://localhost:3003
MESSAGE_SERVICE_URL=http://localhost:3004
REEL_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:3006

# ==== CORS Settings ====
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ==== Scaling and Performance ====
ENABLE_CLUSTERING=false
MAIN_SERVICE_REPLICAS=2
FEED_SERVICE_REPLICAS=2

# ==== Rate Limiting ====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==== Logging ====
LOG_LEVEL=debug

# ==== File Storage ====
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_BUCKET_NAME=your-bucket-name
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain

# Cloudinary (alternative to AWS)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ==== Email Configuration ====
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@example.com

# ==== External APIs ====
GEOPLUGIN_API_URL=http://www.geoplugin.net/json.gp

# ==== Monitoring ====
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin

# ==== Feature Flags ====
ENABLE_AUTO_POST=false 